        <TextBox x:Name="WindDirectionBox" HorizontalAlignment="Left" Height="29" Margin="556,151,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="98"/>
        <TextBox x:Name="WindStrengthBox" HorizontalAlignment="Left" Height="29" Margin="556,115,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="98"/>
        <TextBox x:Name="HumidityBox" HorizontalAlignment="Left" Height="29" Margin="556,78,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="98"/>
        <Label x:Name="label_Copy4" Content="Name" HorizontalAlignment="Left" Height="34" Margin="220,36,0,0" VerticalAlignment="Top" Width="92"/>
