        <Label x:Name="label_Copy7" Content="Altitude" HorizontalAlignment="Left" Height="34" Margin="220,146,0,0" VerticalAlignment="Top" Width="91"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="205" VerticalAlignment="Top" Width="200" Margin="10,12,0,0"/>
        <Button x:Name="SelectButton" Content="Select Station" HorizontalAlignment="Left" Height="38" Margin="55,246,0,0" VerticalAlignment="Top" Width="121" Click="SelectButton_Click"/>
        <Button x:Name="button" Content="Simulate Time Passing" HorizontalAlignment="Left" Height="62" Margin="237,222,0,0" VerticalAlignment="Top" Width="209" Click="button_Click"/>

    </Grid>
</Window>
